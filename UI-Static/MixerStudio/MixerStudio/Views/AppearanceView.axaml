<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MixerStudio.Views.AppearanceView">
    
    <UserControl.Styles>
        <Style Selector="ComboBox">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style Selector="ColorPicker">
            
        </Style>
    </UserControl.Styles>
    
    
    <DockPanel>
        <DockPanel DockPanel.Dock="Left" Background="Chartreuse" Width="150">
            <ComboBox DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                
            </ComboBox>
            <NumericUpDown DockPanel.Dock="Top">
                
            </NumericUpDown>
            <ColorPicker x:Name="colp_Picker" DockPanel.Dock="Top" 
                         ColorModel="Rgba" ColorSpectrumShape="Ring" IsAlphaVisible="True"
                         IsColorSpectrumSliderVisible="True"/>
        </DockPanel>
        <Border Background="Aqua">
            
        </Border>
    </DockPanel>
</UserControl>
